{
  "name": "beefeater/crud-event-bundle",
  "description": "Event-based CRUDL bundle with configurable filtering, pagination, and sorting for Symfony applications",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Sergey Dyakonov",
      "email": "beefeater83@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Beefeater\\CrudEventBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Beefeater\\CrudEventBundle\\Tests\\": "Tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "symfony/framework-bundle": "^7.2",
    "symfony/http-foundation": "^7.2",
    "symfony/http-kernel": "^7.2",
    "symfony/validator": "^7.2",
    "symfony/event-dispatcher": "^7.2",
    "symfony/serializer": "^7.2",
    "symfony/routing": "^7.2",
    "symfony/yaml": "^7.2",
    "symfony/dependency-injection": "^7.2",
    "doctrine/orm": "^3.0",
    "doctrine/doctrine-bundle": "^2.10",
    "doctrine/persistence": "^3.3",
    "symfony/uid": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "scripts": {
    "tests": "phpunit",
    "cs": "phpcs --standard=PSR12 src Tests"
  }
}
