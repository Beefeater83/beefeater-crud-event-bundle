{
  "name": "beefeater/crud-event-bundle",
  "description": "Event-based CRUDL bundle with configurable filtering, pagination, and sorting for Symfony applications",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Sergey Dyakonov",
      "email": "beefeater83@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Beefeater\\CrudEventBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Beefeater\\CrudEventBundle\\Tests\\": "Tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "symfony/framework-bundle": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "scripts": {
    "tests": "phpunit",
    "cs": "phpcs --standard=PSR12 src Tests"
  }
}
